<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#5A5959">


    <ImageView
        android:id="@+id/imagePlaylist"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#555"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Nombre playlist"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imagePlaylist"
        app:layout_constraintTop_toTopOf="@+id/imagePlaylist" />

    <TextView
        android:id="@+id/nameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="1dp"
        android:text="Nechiton"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/imagePlaylist"
        app:layout_constraintTop_toBottomOf="@+id/nameList" />

    <TextView
        android:id="@+id/nbSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="1dp"
        android:text="8 canciones"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/imagePlaylist"
        app:layout_constraintTop_toBottomOf="@+id/nameUser" />

    <View
        android:id="@+id/sitterRow"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#5EFFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/imagePlaylist"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>