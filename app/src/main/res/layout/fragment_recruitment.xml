<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.owner.recruitment.RecruitmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photoSitter"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nameSitterTxt"
            style="@style/emailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Name sitter" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <TextView
            android:id="@+id/emailSitterTxt"
            style="@style/emailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="sitter@gmail.com" />

        <EditText
            android:id="@+id/editText2"
            style="@style/sectionSeparator"
            android:enabled="false"
            android:text="Información del cuidador" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/emailUser"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                android:text="Disponibilidad horaria"
                android:textAlignment="textStart"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/scheduleSitter"
                style="@style/emailUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                tools:text="4:00 PM a 8:00 PM (extendible)." />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sdd"
                style="@style/emailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                android:text="Precio  "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceText"
                style="@style/emailUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                tools:text="$2.500/hora" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                style="@style/emailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                android:text="Cuida a   "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kindPet"
                style="@style/emailUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="Perros, gatos y otro tipo de mascotas pequenas"
                tools:text="Perros, gatos y otro tipo de mascotas pequenas" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/editText5"
            style="@style/sectionSeparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Solicitar servicio" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left"
                android:layout_marginLeft="32dp"
                app:srcCompat="@drawable/clock_icon" />

            <TextView
                style="@style/emailUser"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_horizontal|left"
                android:text="  Hora de inicio"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/date"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="16dp"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Fercha del servicio" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/s1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left"
                android:layout_marginLeft="32dp"
                app:srcCompat="@drawable/clock_icon" />

            <TextView
                android:id="@+id/s"
                style="@style/emailUser"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_horizontal|left"
                android:text="  Hora de inicio"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TimePicker
            android:id="@+id/startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left"
                android:layout_marginLeft="32dp"
                app:srcCompat="@drawable/clock_icon" />

            <TextView
                android:id="@+id/nameSitterTxt4"
                style="@style/emailUser"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_horizontal|left"
                android:text="  Hora de finalización"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TimePicker
            android:id="@+id/endTime"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:timePickerMode="spinner" />

        <Button
            android:id="@+id/next_button"
            style="@style/AppButton"
            android:text="@string/request_service" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            />

    </LinearLayout>
</ScrollView>