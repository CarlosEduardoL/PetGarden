<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppButton" parent="@style/AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="changePassword" parent="@style/AppTheme">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_corner_btn</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="filterButton" parent="@style/AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>

    </style>

    <style name="RegisterTitle" parent="@style/AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="FilterSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="nameUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">"#000000</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="emailUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">"#555555</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="sectionSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:textColor">"#6F6F6F</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="infoPetText">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="rowPet">
        <item name="android:background">@drawable/rounded_corner_row</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="headerScheduler">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/rounded_corner_schedule</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>
